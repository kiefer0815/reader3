<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

	<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
	              xmlns:tools="http://schemas.android.com/tools"
	              android:layout_width="match_parent"
	              android:layout_height="match_parent"
	              android:fitsSystemWindows="true"
	              android:orientation="vertical"
	              tools:context="com.is90.Reader3.fragment.HomeBookShelfFragment">


		<!--状态栏-->
		<View
				android:id="@+id/view_status"
				android:layout_width="match_parent"
				android:layout_height="24dp"
				android:visibility="gone"
				android:background="@color/colorTheme" />

		<android.support.v7.widget.Toolbar
				android:id="@+id/toolbar"
				android:layout_width="match_parent"
				android:layout_height="?attr/actionBarSize"
				android:background="@color/colorTheme"
				app:contentInsetStart="0.0dp"
				app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
				app:theme="@style/ToolbarStyle">


			<HorizontalScrollView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:paddingLeft="15dp"
					android:layout_gravity="left">

				<LinearLayout
						android:id="@+id/ll_app_header"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:background="?attr/selectableItemBackgroundBorderless"
						app:theme="@style/AppTheme">

					<TextView
							android:id="@+id/iv_title_gank"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center"
							android:layout_marginRight="20dp"
							android:background="?attr/selectableItemBackgroundBorderless"
							android:textColor="@color/app_bar_text_color"
							android:textSize="16dp"
							android:text="每日小说" />

					<TextView
							android:id="@+id/iv_title_dou"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center"
							android:textColor="@color/app_bar_text_color"
							android:textSize="16dp"
							android:background="?attr/selectableItemBackgroundBorderless"
							android:text="我的小说" />

				</LinearLayout>

			</HorizontalScrollView>
			<FrameLayout
					android:id="@+id/ll_title_search"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:background="?attr/selectableItemBackgroundBorderless"
					android:paddingLeft="15dp"
					android:layout_gravity="right"
					android:paddingRight="15dp">

				<ImageView
						android:id="@+id/iv_title_search"
						android:layout_width="23dp"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:src="@mipmap/actionbar_search" />
			</FrameLayout>
		</android.support.v7.widget.Toolbar>

		<FrameLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent">

			<com.is90.Reader3.view.ChildViewPager
					android:id="@+id/vp_content"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:descendantFocusability="blocksDescendants" />

			<android.support.design.widget.FloatingActionButton
					android:id="@+id/fab"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom|end"
					android:layout_margin="@dimen/fab_margin"
					app:srcCompat="@drawable/refresh" />

		</FrameLayout>
	</LinearLayout>
</layout>